<div class="center">
  <%= simple_form_for @checkout, :html => { :multipart => true }, validate: true do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :address %>
  <%= f.input :suburb %>
  <%= f.input :zip %>
  <%= f.input :state %>
  <%= f.input :phone %>

  <%= hidden_field_tag(:order_id, @order.id) %>

  <%= f.submit %>
  <% end %>
</div>