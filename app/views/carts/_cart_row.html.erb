<div>
  <div>
    <h4><%= product.name %></h4>
  </div>
  <div>

    <%= form_for order_item, remote: true do |f| %>
      <h4>Unit Price: <%= number_to_currency order_item.unit_price %></h4>
      <div>
        <div>
          <%= f.number_field :quantity, value: order_item.quantity.to_i, min: 1 %>
          <%= f.hidden_field :product_id, value: product.id %>
        </div>
        <div>
          <div>
            <%= f.submit "Update Quantity" %>
            <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the product '#{order_item.product.name}' from your cart?" }, method: :delete, remote: true } %>
          </div>
        </div>
      </div>
      <h4>Total Price: <%= number_to_currency order_item.total_price %></h4>
    <% end %>
    <hr>
  </div>
</div>